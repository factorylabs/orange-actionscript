package tests.factorylabs.orange.core.util{	import tests.digitalprimates.fluint.tests.TestCase;		import com.factorylabs.orange.core.util.ColorUtil;			/**	 * Test methods for the ColorUtil test case. 	 *  	 * <p>Copyright 2009 by Factory Design Labs, All Rights Reserved.</p> 	 * <a href="http://www.factorylabs.com/">www.factorylabs.com</a> 	 *  	 * @author		Matthew Kitt 	 * @version		1.0.0 :: Mar 15, 2009 	 */	public class ColorUtilTest		extends TestCase	{		public function ColorUtilTest()		{			super();		}				override public function toString() :String 		{			return "tests.factorylabs.orange.core.util.ColorUtilTest";		}		public function test_hexToFlashColorNumber() :void 		{			assertEquals( ColorUtil.hexToFlashColorNumber( '0xff00ff' ), 0xff00ff );			assertFalse( ColorUtil.hexToFlashColorNumber( '#ff00ff' ) == 0xff00ff );		}				public function test_flashColorNumberToHexString() :void		{			assertEquals( ColorUtil.flashColorNumberToHexString( 0xff00ff ), '0xff00ff' );		}				public function test_rgbToHex() :void		{			assertEquals( ColorUtil.rgbToHex( 255, 255, 255 ), 0xffffff );			assertTrue( ColorUtil.rgbToHex( 255, 255, 255 ) == 0xffffff );			assertFalse( ColorUtil.rgbToHex( 255, 255, 255 ) == 0x000000 );		}				[Test(description="Checking to ensure the values are the same, Objects will be different.", tracker_id="")]		public function test_hexToRGB() :void		{			var color1 :Object = { r: 255, g:255, b:255 };			var color2	:Object = ColorUtil.hexToRGB( 0xffffff );						assertEquals( color1[ 'r' ], color2[ 'r' ] );			assertEquals( color1[ 'g' ], color2[ 'g' ] );			assertEquals( color1[ 'b' ], color2[ 'b' ] );		}	}}