nction test_flashColorNumberToHexString() :void		{			assertEquals( ColorUtil.flashColorNumberToHexString( 0xff00ff ), '0xff00ff' );		}				public function test_rgbToHex() :void		{			assertEquals( ColorUtil.rgbToHex( 255, 255, 255 ), 0xffffff );			assertTrue( ColorUtil.rgbToHex( 255, 255, 255 ) == 0xffffff );			assertFalse( ColorUtil.rgbToHex( 255, 255, 255 ) == 0x000000 );		}				public function test_hexToRGB() :void		{			var color1 :Object = { r: 255, g:255, b:255 };			var color2	:Object = ColorUtil.hexToRGB( 0xffffff );						assertEquals( color1[ 'r' ], color2[ 'r' ] );			assertEquals( color1[ 'g' ], color2[ 'g' ] );			assertEquals( color1[ 'b' ], color2[ 'b' ] );		}	}}