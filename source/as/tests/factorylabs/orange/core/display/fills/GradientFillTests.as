 0x000000, 0xff00ff ], [ 1, 1 ], [ 0, 255 ], GradientType.LINEAR, SpreadMethod.PAD, InterpolationMethod.RGB, 0 );		}				[After]		public function runAfterEachTest() :void		{			_fill = null;		}				[Test]		public function constructor() :void		{			assertThat( _fill.rotation, equalTo( 0 ) );			assertThat( _fill.colors, equalTo( [ 0x000000, 0xff00ff ] ) );			assertThat( _fill.alphas, equalTo( [ 1, 1 ] ) );			assertThat( _fill.ratios, equalTo( [ 0, 255 ] ) );			assertThat( _fill.type, equalTo( GradientType.LINEAR ) );			assertThat( _fill.spreadMethod, equalTo( SpreadMethod.PAD ) );			assertThat( _fill.interpolationMethod, equalTo( InterpolationMethod.RGB ) );			assertThat( _fill.focalPointRatio, equalTo( 0 ) );		}				[Test(description='Checks both the getter and setter.', tracker_id='')]		public function rotation() :void		{			_fill.rotation = 180;			assertThat( _fill.rotation, equalTo( 180 ) );		}				[Test(description='Checks both the getter and setter.', tracker_id='')]		public function colors() :void		{			_fill.colors = [ 0xffffff, 0x000000 ];			assertThat( _fill.colors, equalTo( [ 0xffffff, 0x000000 ] ) );		}				[Test(description='Checks both the getter and setter.', tracker_id='')]		public function alphas() :void		{			_fill.alphas = [ 0, 0 ];			assertThat( _fill.alphas, equalTo( [ 0, 0 ] ) );		}				[Test(description='Checks both the getter and setter.', tracker_id='')]		public function ratios() :void		{			_fill.ratios = [ 128, 128 ];			assertThat( _fill.ratios, equalTo( [ 128, 128 ] ) );		}				[Test(description='Checks both the getter and setter.', tracker_id='')]		public function type() :void		{			_fill.type = GradientType.RADIAL;			assertThat( _fill.type, equalTo( GradientType.RADIAL ) );		}				[Test(description='Checks both the getter and setter.', tracker_id='')]		public function spreadMethod() :void		{			_fill.spreadMethod = SpreadMethod.REFLECT;			assertThat( _fill.spreadMethod, equalTo( SpreadMethod.REFLECT ) );		}				[Test(description='Checks both the getter and setter.', tracker_id='')]		public function interpolationMethod() :void		{			_fill.interpolationMethod = InterpolationMethod.LINEAR_RGB;			assertThat( _fill.interpolationMethod, equalTo( InterpolationMethod.LINEAR_RGB ) );		}				[Test(description='Checks both the getter and setter.', tracker_id='')]		public function focalPointRatio() :void		{			_fill.focalPointRatio = 10;			assertThat( _fill.focalPointRatio, equalTo( 10 ) );		}			}}