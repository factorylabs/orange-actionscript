		public function language() :void		{			assertThat( _locale.language, equalTo( Locale.ENGLISH ) );			_locale.language = Locale.GERMAN;			assertThat( _locale.language, equalTo( Locale.GERMAN ) );		}				[Test]		public function variant() :void		{			assertThat( _locale.variant, equalTo( Locale.US ) );			_locale.variant = Locale.UK;			assertThat( _locale.variant, equalTo( Locale.UK ) );		}				[Test]		public function languageVariant() :void		{			assertThat( _locale.languageVariant, equalTo( Locale.ENGLISH + '-' + Locale.US ) );			_locale.languageVariant = Locale.FRENCH + '-' + Locale.UK;			assertThat( _locale.languageVariant, equalTo( Locale.FRENCH + '-' + Locale.UK ) );		}				[Test]		public function reset() :void		{			_locale.language = Locale.GERMAN;			_locale.variant = Locale.UK;			_locale.reset();			assertThat( Capabilities.language, equalTo( _locale.language ) );			assertThat( Locale.US, equalTo( _locale.variant ) );		}	}}