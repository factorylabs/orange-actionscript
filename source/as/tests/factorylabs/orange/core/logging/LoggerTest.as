ted function tearDown() :void 		{			_janitor.cleanUp();		}				override public function toString() :String 		{			return 'tests.factorylabs.orange.core.logging.LoggerTest';		}				public function test_isSilent() :void		{			_logger.isSilent = true;			assertTrue( _logger.isSilent );						_logger.isSilent = false;			assertFalse( _logger.isSilent );		}				public function test_name() :void		{			_logger.name = '[Test Test Logger]';			assertEquals( '[Test Test Logger]', _logger.name );			_logger.name = '[Test Logger]';			assertEquals( '[Test Logger]', _logger.name );		}		public function test_trace() :void		{			var msg :String = '[LoggerTest].test_trace()';			setupAsyncListener( msg );			_logger.trace( msg );		}				public function test_log() :void		{			var msg :String = '[LoggerTest].test_log()';			setupAsyncListener( msg );			_logger.log( msg );		}				public function test_debug() :void		{			var msg :String = '[LoggerTest].test_debug()';			setupAsyncListener( msg );			_logger.debug( msg );		}				public function test_info() :void		{			var msg :String = '[LoggerTest].test_info()';			setupAsyncListener( msg );			_logger.info( msg );		}				public function test_warn() :void		{			var msg :String = '[LoggerTest].test_warn()';			setupAsyncListener( msg );			_logger.warn( msg );		}				public function test_error() :void		{			var msg :String = '[LoggerTest].test_error()';			setupAsyncListener( msg );			_logger.error( msg );		}				public function test_fatal() :void		{			var msg :String = '[LoggerTest].test_fatal()';			setupAsyncListener( msg );			_logger.fatal( msg );		}				public function test_core() :void		{			var msg :String = '[LoggerTest].test_core()';			setupAsyncListener( msg );			_logger.core( msg );		}		private function setupAsyncListener( msg:String ):void		{			_janitor.addEventListener( _logger, LoggerEvent.UPDATE, addAsync( function( event:LoggerEvent ):void {	            handleEventSucceed( event.message, msg );	        }, 100, 	        function( event:LoggerEvent ):void {				handleEventFailed( msg );	        }));		}				private function handleEventSucceed( eventMsg:String, msg :String ) :void		{			assertEquals( eventMsg, msg );		}				private function handleEventFailed( msg :String ) :void		{			fail( '[LoggerTest].handleEventFailedTrace()' + msg );		}	}}