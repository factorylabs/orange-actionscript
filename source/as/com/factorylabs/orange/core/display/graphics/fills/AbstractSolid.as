package com.factorylabs.orange.core.display.graphics.fills {	import flash.errors.IllegalOperationError;		import flash.display.Graphics;		import com.factorylabs.orange.core.display.graphics.IGraphic;	import com.factorylabs.orange.core.display.graphics.fills.IFill;		/**	 * AbstractSolid handles the basic necessities for creating either a SolidFill or SolidStroke.	 * 	 * This is a convenience class and is never instatiated.	 * 	 * <p>Copyright 2008 by Factory Design Labs, All Rights Reserved.</p>	 * <a href="http://www.factorylabs.com/">www.factorylabs.com</a>	 *	 * @author		Matthew Kitt	 * @version		1.0.0 :: Jun 1, 2008	 */	public class AbstractSolid 		implements IFill	{		/* Properties ......................................................................................*/				protected var _color : uint;		protected var _alpha : Number;		/* Getters/Setters .................................................................................*/				/**		 * @return	the current color.		 */		public function get color() : uint		{			return _color;		}		public function set color( vColor : uint ) : void		{			_color = vColor;		}				/**		 * @return the current alpha.		 */		public function get alpha() : Number		{			return _alpha;		}		public function set alpha( vAlpha : Number ) : void		{			_alpha = vAlpha;		}/* Constructor .....................................................................................*/				/**		 * Abstract constructor for setting and saving properties.		 * @param vColor	A hexadecimal color value.		 * @param vAlpha	A number that indicates the alpha value; valid values are 0 to 1.		 */		public function AbstractSolid( vColor : uint = 0xff00ff, vAlpha : Number = 1 )		{			_color = vColor;			_alpha = vAlpha;		}		/* Public Methods ..................................................................................*/				/**		 * @return	the string equivalent of this class.		 */		public function toString() : String 		{			return "com.factorylabs.orange.core.display.graphics.fills.AbstractSolid";		}				/**		 * @inheritDoc		 */		public function beginFill( gfx : Graphics, fgfx : IGraphic ) : void		{			throw new IllegalOperationError( toString() + " : the beginFill() method must be invoked by a subclass." );		}		/**		 * @inheritDoc		 */		public function endFill( gfx : Graphics ) : void		{			throw new IllegalOperationError( toString() + " : the endFill() method must be invoked by a subclass." );		}	}}